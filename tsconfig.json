{
  "compilerOptions": {
    "baseUrl": ".",
    "noImplicitAny": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "target": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "module": "commonjs",
    "lib": [
      "esnext",
      "dom"
    ]
  },
  "ts-node": {
    "esm": true,
    "compilerOptions": {
      "module": "CommonJS",
      "moduleResolution": "node"
    }
  },
  "exclude": [
    "node_modules",
  ],
  "include": ["src"]
}
